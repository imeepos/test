{
  "name": "@sker/config",
  "version": "1.0.0",
  "description": "配置管理 - 环境配置、功能开关、主题配置",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/joi": "^17.2.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0"
  },
  "keywords": [
    "config",
    "environment",
    "features",
    "theme",
    "settings"
  ],
  "author": "SKER Team",
  "license": "MIT"
}