{
  "name": "@sker/store",
  "version": "0.1.0",
  "description": "SKER 数据存储服务 - PostgreSQL 数据管理和持久化",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "migrate": "ts-node src/migrations/migrate.ts",
    "migrate:status": "ts-node src/migrations/migrate.ts status",
    "migrate:rollback": "ts-node src/migrations/migrate.ts rollback",
    "seed": "ts-node src/migrations/seed.ts seed",
    "seed:clear": "ts-node src/migrations/seed.ts clear",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset": "npm run seed:clear && npm run migrate && npm run seed",
    "lint": "echo 'Linting store package...'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6"
  }
}