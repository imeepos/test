{
  "name": "@sker/store",
  "version": "0.1.0",
  "description": "SKER 数据存储服务 - PostgreSQL 数据管理和持久化",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "migrate": "ts-node src/migrations/migrate.ts",
    "migrate:auto": "ts-node src/migrations/migrate.ts migrate -- --auto",
    "migrate:status": "ts-node src/migrations/migrate.ts status",
    "migrate:status:auto": "ts-node src/migrations/migrate.ts status -- --auto",
    "migrate:force": "ts-node src/migrations/migrate.ts migrate -- --force",
    "seed": "ts-node src/migrations/seed.ts seed",
    "seed:force": "ts-node src/migrations/seed.ts seed -- --force",
    "seed:clear": "ts-node src/migrations/seed.ts clear",
    "seed:stats": "ts-node src/migrations/seed.ts stats",
    "seed:minimal": "ts-node src/migrations/seed.ts seed -- --minimal",
    "seed:users": "ts-node src/migrations/seed.ts seed -- --users-only",
    "seed:projects": "ts-node src/migrations/seed.ts seed -- --projects-only",
    "db:setup": "npm run migrate && npm run seed",
    "db:setup:auto": "npm run migrate:auto && npm run seed",
    "db:reset": "npm run seed:clear && npm run migrate && npm run seed",
    "db:reset:auto": "npm run seed:clear && npm run migrate:auto && npm run seed",
    "db:fresh": "npm run seed:clear && npm run migrate && npm run seed -- --force",
    "lint": "echo 'Linting store package...'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sker/config": "workspace:*",
    "@sker/models": "workspace:*",
    "@types/node": "^24.5.2",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2"
  }
}
