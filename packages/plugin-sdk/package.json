{
  "name": "@sker/plugin-sdk",
  "version": "1.0.0",
  "type": "module",
  "description": "SKER 插件开发 SDK - 为第三方开发者提供完整的插件开发接口",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.esm.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "sker",
    "plugin",
    "sdk",
    "canvas",
    "ai",
    "collaboration",
    "typescript"
  ],
  "author": "SKER Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker/plugin-sdk"
  },
  "bugs": {
    "url": "https://github.com/sker/plugin-sdk/issues"
  },
  "homepage": "https://developer.sker.com",
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rollup": "^4.6.1",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}