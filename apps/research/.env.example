# @sker/research Environment Configuration Example

# Application Settings
NODE_ENV=production
PORT=3000
API_BASE_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://sker_user:sker_password@localhost:5432/sker_db
REDIS_URL=redis://localhost:6379

# Academic API Keys
PUBMED_API_KEY=your_pubmed_api_key
PUBMED_API_TOOL=sker-research
PUBMED_API_EMAIL=your_email@domain.com

# CrossRef API
CROSSREF_MAILTO=your_email@domain.com
CROSSREF_PLUS_TOKEN=your_crossref_plus_token

# arXiv API
ARXIV_API_ENDPOINT=http://export.arxiv.org/api/query
ARXIV_MAX_RESULTS=100

# Google Scholar (if using)
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_key

# OpenAI for Academic AI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
ACADEMIC_AI_TEMPERATURE=0.3
ACADEMIC_AI_MAX_TOKENS=2000

# File Upload Settings
MAX_FILE_SIZE=500MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,docx,tex,txt,csv,xlsx,bib,ris

# Statistical Computing
R_SCRIPT_PATH=/usr/bin/Rscript
PYTHON_PATH=/usr/bin/python3
STATS_TIMEOUT=1800
STATS_MEMORY_LIMIT=4GB

# Document Processing
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANGUAGES=eng,chi_sim
PDF_MAX_PAGES=1000

# Security Settings
JWT_SECRET=your_jwt_secret_key_for_research
SESSION_SECRET=your_session_secret_key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=10
ANALYSIS_RATE_LIMIT=5

# Cache Settings
CACHE_TTL=3600
ACADEMIC_CACHE_TTL=86400
CITATION_CACHE_TTL=604800

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/research.log
ACADEMIC_LOG_FILE=./logs/academic-api.log

# External Services
ZOTERO_API_KEY=your_zotero_api_key
MENDELEY_CLIENT_ID=your_mendeley_client_id
MENDELEY_CLIENT_SECRET=your_mendeley_client_secret

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_STATISTICS=true
ENABLE_AI_WRITING_ASSISTANT=true
ENABLE_CITATION_NETWORK_ANALYSIS=true
ENABLE_LATEX_RENDERING=true

# Development Settings
DEV_MOCK_ACADEMIC_APIs=false
DEV_SKIP_OCR=false
DEV_ENABLE_DEBUG_LOGGING=false