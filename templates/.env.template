# ==========================================
# [应用名称] 环境变量配置
# ==========================================
# 说明：
# 1. 复制此文件为 .env 并根据实际情况修改配置
# 2. Vite项目的环境变量必须以 VITE_ 开头才能在客户端访问
# 3. 不要将 .env 文件提交到版本控制系统

# ------------------------------------------
# 应用配置
# ------------------------------------------
VITE_APP_TITLE=SKER Application
VITE_APP_VERSION=1.0.0

# ------------------------------------------
# 后端服务地址
# ------------------------------------------
# Gateway API网关地址
VITE_GATEWAY_URL=http://localhost:3000

# Store数据存储服务地址
VITE_STORE_URL=http://localhost:3001

# AI API服务地址（可选，如果通过Gateway代理则不需要）
VITE_AI_API_URL=http://localhost:8000/api/ai

# ------------------------------------------
# WebSocket配置
# ------------------------------------------
VITE_WS_URL=ws://localhost:3000/ws

# ------------------------------------------
# 功能开关
# ------------------------------------------
VITE_FEATURE_AI_ENABLED=true
VITE_FEATURE_COLLABORATION=false

# ------------------------------------------
# 第三方服务配置（如需要）
# ------------------------------------------
# VITE_SENTRY_DSN=
# VITE_ANALYTICS_ID=

# ------------------------------------------
# 开发环境标识
# ------------------------------------------
NODE_ENV=development
